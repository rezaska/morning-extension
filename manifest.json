{
  "manifest_version": 2,

  "name": "Morning!",
  "description": "Try Morning",
  "version": "1.0",
  "author": "Reza Soleimani",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Morning!"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "js": ["popup.js"],
      "css": ["popup.css"],
      "matches": ["http://*/*","https://*/*"]
    }
  ]
}